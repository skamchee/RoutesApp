<!-- shows all the lists a user has -->
<% if session[:user_id]==@user.id %><!--user authorization-->
	<% editable = true %>
<% end %>

<% if editable %>
	<%= link_to "Add a list", "/lists/new" %>
<% end %>
<% if @lists %>
	<table class="table">
		<tr><td>
	  		<h2><%= "#{@user.name}'s lists" %></h2>
	  	</td></tr>
		<% @lists.each do |list| %>
			<tr><td>
				<% if editable %>
					<%= link_to "Delete", "/lists/#{list.id}", method: 'delete' %>
					<%= link_to "Edit", edit_list_path(list.id) %>
				<% else %>
					<h2>
					<%if Favorite.where(:list_id => list.id, :user_id => session[:user_id]).blank? %>
						<%= link_to new_favorite_path(:list_id => list.id) do%> 
						<i class="fa fa-star-o"></i>
						<% end %>
					<% else %>
						<i class="fa fa-star"></i>
					<% end %>
				<% end %>

				<%= link_to list.name, "/lists/#{list.id}"%></h2>
				<p><%=list.description%></p>
				
			</td></tr>
		<% end %>
	
	</table>
<% else %>
	<h2>No lists yet!</h2>
<% end %>
