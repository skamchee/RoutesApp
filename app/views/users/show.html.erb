<!-- shows all the lists a user has -->
<% if session[:user_id]==User.find_by(:name => params[:id]) %><!--user authorization-->
	<% editable = true %>
<% end %>

<% if editable %>
	<%= link_to "Add a list", "/lists/new" %>
<% end %>
<% if @lists %>
	<table class="table">
	
		<% @lists.each do |list| %>
			<tr><td>
				<h2><%= link_to list.name, "/lists/#{list.id}"%></h2>
				<% if editable %>
					<p><%=list.description%></p>
					<%= link_to "Delete", "/lists/#{list.id}", method: 'delete' %>
					<%= link_to "Edit", edit_list_path(list.id) %>
				<% end %>
			</td></tr>
		<% end %>
	
	</table>
<% else %>
	<h2>No lists yet!</h2>
<% end %>
