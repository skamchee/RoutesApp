<!-- shows all the lists a user favorited -->
<% if session[:user_id]==@user.id %><!--user authorization-->
	<% editable = true %>
<% end %>

<% if @lists %>
	<table class="table">
		<tr><td>
	  		<h2><%= "#{@user.name}'s favorites" %></h2>
	  	</td></tr>
		<% @lists.each do |list| %>
			<tr>
				<td>
				<h2><%= link_to list.name, "/lists/#{list.id}"%></h2>
				<p><%=list.description%></p>

				<% if editable %>
						<%= link_to favorite_path(list.id), method: 'delete' do%> 
							<i class="fa fa-star-o"></i>Unfavorite
						<% end %>
				<% end %>

				</td>
			</tr>
		<% end %>
	
	</table>
<% else %>
	<h2>No favorites yet!</h2>
<% end %>
